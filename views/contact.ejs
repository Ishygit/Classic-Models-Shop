<!-- Contact Header -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-3">Contact Us</h1>
                <p class="lead text-muted">Have questions or feedback? We'd love to hear from you</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Content -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-4 mb-4">Contact Us</h1>
                <p class="lead mb-5">Have a question or need assistance? We're here to help!</p>

                <div class="row mb-5">
                    <div class="col-md-4">
                        <div class="mb-4">
                            <h3 class="h5 mb-3">Address</h3>
                            <p class="mb-0">123 Model Street</p>
                            <p class="mb-0">Suite 456</p>
                            <p class="mb-0">New York, NY 10001</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-4">
                            <h3 class="h5 mb-3">Contact Info</h3>
                            <p class="mb-0">Phone: (555) 123-4567</p>
                            <p class="mb-0">Email: info@classicmodels.com</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-4">
                            <h3 class="h5 mb-3">Business Hours</h3>
                            <p class="mb-0">Mon - Fri: 9:00 AM - 6:00 PM</p>
                            <p class="mb-0">Sat: 10:00 AM - 4:00 PM</p>
                            <p class="mb-0">Sun: Closed</p>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h2 class="h3 mb-4">Send us a Message</h2>
                        <form action="/contact" method="POST">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name" class="form-label">Your Name</label>
                                        <input type="text" class="form-control" id="name" name="name" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="email" class="form-label">Email Address</label>
                                        <input type="email" class="form-control" id="email" name="email" required>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="subject" class="form-label">Subject</label>
                                        <input type="text" class="form-control" id="subject" name="subject" required>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="message" class="form-label">Message</label>
                                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

